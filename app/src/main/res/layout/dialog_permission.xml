<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/dlg_permission_iv_icon"
        android:layout_width="@dimen/dlg_permission_icon_size"
        android:layout_height="@dimen/dlg_permission_icon_size"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_folder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/raleway_black"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:text="@string/perm_rationale"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dlg_permission_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@android:string/ok"
        android:weightSum="1" />

</LinearLayout>